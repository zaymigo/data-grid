{
  "name": "zaymigo/data-grid",
  "description": "Fork NNX grid module",
  "type": "library",
  "keywords": [
    "zf2"
  ],
  "authors": [
    {
      "name": "Roman Malashin",
      "email": "r.malashin@zaymigo.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/zaymigo/data-grid"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",

    "doctrine/common": "^2.5.0",
    "doctrine/dbal": "^2.5.0",
    "doctrine/orm": "^2.5.0",


    "zendframework/zend-eventmanager": "^3.0",
    "zendframework/zend-mvc": "^3.0.1",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-stdlib": "^3.0",
    "zendframework/zend-view": "^2.6",
    "zendframework/zend-http": "^2.5",
    "zendframework/zend-paginator": "^2.4",
    "zendframework/zend-filter": "^2.4",
    "zfcampus/zf-content-negotiation": "~1.0",
    "zendframework/zend-modulemanager": "^2.7",
    "zendframework/zend-json": "^3.0"
  },
  "require-dev":{
    "fabpot/php-cs-fixer": "~1.11.0",
    "phpunit/phpunit": "~4.8.0",
    "phpunit/phpcov": "~2.0.0",
    "satooshi/php-coveralls": "~1.0.0",

    "zendframework/zend-test": "^3.0",
    "zendframework/zend-config": "^3.0",
    "zendframework/zend-loader": "^2.5",
    "zendframework/zend-serializer": "^2.8",
    "zendframework/zend-log": "^2.4.0",
    "zendframework/zend-i18n": "^2.4.0",

    "doctrine/doctrine-orm-module": "^1.1"

  },
  "autoload": {
    "psr-4": {
      "Nnx\\DataGrid\\": "src/"
    },
    "classmap": [
      "./Module.php",
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nnx\\DataGrid\\Test\\PhpUnit\\": "test/phpunit/tests",
      "Nnx\\DataGrid\\Test\\PhpUnit\\TestData\\": "test/phpunit/data"
    },
    "classmap": [
      "./test/phpunit/Bootstrap.php",
      "test/"
    ]
  }
}
