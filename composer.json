{
  "name": "zaymigo/data-grid",
  "description": "Fork NNX grid module",
  "type": "library",
  "keywords": [
    "zf2"
  ],
  "authors": [
    {
      "name": "Roman Malashin",
      "email": "r.malashin@zaymigo.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/zaymigo/data-grid"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",

    "doctrine/common": "~2.5.0",
    "doctrine/dbal": "~2.5.0",
    "doctrine/orm": "~2.5.0",


    "zendframework/zend-eventmanager": "~2.4.0",
    "zendframework/zend-modulemanager": "~2.4.0",
    "zendframework/zend-mvc": "~2.4.0",
    "zendframework/zend-servicemanager": "~2.4.0",
    "zendframework/zend-stdlib": "~2.4.0",
    "zendframework/zend-view": "~2.4.0",
    "zendframework/zend-http": "~2.4.0",
    "zendframework/zend-json": "~2.4.0",
    "zendframework/zend-paginator": "~2.4.0",
    "zendframework/zend-filter": "2.4.*",
    "zfcampus/zf-content-negotiation": "~1.0"
  },
  "require-dev":{
    "fabpot/php-cs-fixer": "~1.11.0",
    "phpunit/phpunit": "~4.8.0",
    "phpunit/phpcov": "~2.0.0",
    "satooshi/php-coveralls": "~1.0.0",

    "zendframework/zend-test": "~2.4.0",
    "zendframework/zend-config": "~2.4.0",
    "zendframework/zend-loader": "~2.4.0",
    "zendframework/zend-serializer": "~2.4.0",
    "zendframework/zend-log": "~2.4.0",
    "zendframework/zend-i18n": "~2.4.0",

    "doctrine/doctrine-orm-module": "~0.10.0",

    "nnx/zf2-test-toolkit": "~0.1.0"

  },
  "autoload": {
    "psr-4": {
      "Nnx\\DataGrid\\": "src/"
    },
    "classmap": [
      "./Module.php",
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nnx\\DataGrid\\Test\\PhpUnit\\": "test/phpunit/tests",
      "Nnx\\DataGrid\\Test\\PhpUnit\\TestData\\": "test/phpunit/data"
    },
    "classmap": [
      "./test/phpunit/Bootstrap.php",
      "test/"
    ]
  }
}